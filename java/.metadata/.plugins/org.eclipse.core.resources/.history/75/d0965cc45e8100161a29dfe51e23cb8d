import java.io.File;
import java.util.List;
import java.util.concurrent.Callable;

public class NewCallable implements Callable<File[]>{
	private String lecteur;
	
	public NewCallable(String lecteur) {
		super();
		this.lecteur = lecteur;
	}

	public String getLecteur() {
		return lecteur;
	}

	public void setLecteur(String lecteur) {
		this.lecteur = lecteur;
	}

	@Override
	public File[] call() throws Exception {
		// TODO Auto-generated method stub
		File[] docs = null;
		trouve(docs, lecteur);
		return docs;
	}
	
	public void trouve(File[] file, String lect)
	{
		File lec = new File(lect);
		file = lec.listFiles();
	}
}
